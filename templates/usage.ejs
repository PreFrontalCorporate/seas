<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Usage</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="my-5">Your API Usage</h1>

        <div class="row">
            <div class="col-md-12">
                <h3>Current Plan: <span id="plan-name"><%= planName %></span></h3>
                <p>API Calls: <span id="current-calls"><%= currentCalls %></span> out of <span id="plan-api-limit"><%= apiLimit %></span></p>
                <p><strong>Rate Limit:</strong> 60 requests per minute</p>

                <h4>Upgrade Plan:</h4>
                <button class="btn btn-primary" id="upgrade-plan">Upgrade Plan</button>
            </div>
        </div>

        <div id="upgrade-section" class="mt-4" style="display: none;">
            <h4>Choose an upgrade plan:</h4>
            <button class="btn btn-success" id="upgrade-to-tier-2">Upgrade to Tier 2</button>
            <button class="btn btn-danger" id="upgrade-to-tier-3">Upgrade to Tier 3</button>
        </div>
    </div>

    <script>
        // Example: Fetch data from a backend endpoint
        fetch('/api/usage') 
            .then(response => response.json())
            .then(data => {
                document.getElementById('current-calls').textContent = data.current_calls;
                document.getElementById('plan-api-limit').textContent = data.plan_api_limit;
                document.getElementById('plan-name').textContent = data.plan_name;
            });

        document.getElementById('upgrade-plan').addEventListener('click', function() {
            document.getElementById('upgrade-section').style.display = 'block';
        });

        document.getElementById('upgrade-to-tier-2').addEventListener('click', function() {
            alert('Upgrade to Tier 2 plan.');
        });

        document.getElementById('upgrade-to-tier-3').addEventListener('click', function() {
            alert('Upgrade to Tier 3 plan.');
        });
    </script>
</body>
</html>
